<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#363636"/> <!-- Màu nền cho button -->
            <corners android:radius="16dp"/> <!-- Bo tròn góc -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#3f729b"/> <!-- Màu bóng -->
            <corners android:radius="16dp"/> <!-- Bo tròn góc -->
        </shape>
    </item>
</layer-list>