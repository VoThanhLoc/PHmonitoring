<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF6200EE" /> <!-- Màu khi nhấn -->
            <corners android:radius="25dp" /> <!-- Bo tròn góc -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape>
            <solid android:color="#3f729b" /> <!-- Màu nền bình thường -->
            <corners android:radius="25dp" />
        </shape>
    </item>
</selector>