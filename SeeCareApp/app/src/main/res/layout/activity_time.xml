<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeActivity">

    <LinearLayout
        android:id="@+id/timerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <!-- Tiêu đề -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp">

            <ImageButton
                android:id="@+id/btn_Back"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_chevron_left_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:text="Time"
                android:textSize="50dp" />
        </RelativeLayout>

        <!-- Các hàng với Spinner và Switch để chọn thời gian và bật/tắt thiết bị -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <Spinner
                android:id="@+id/spinnerHours1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:maxHeight="50dp"/>
            <Spinner
                android:id="@+id/spinnerMinutes1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:maxHeight="50dp"/>
            <Spinner
                android:id="@+id/spinnerSeconds1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:maxHeight="50dp"/>
            <Switch
                android:id="@+id/deviceToggle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tắt/Bật thiết bị" />
        </LinearLayout>

        <!-- Các hàng tiếp theo -->
        <!-- Lặp lại các LinearLayout cho hàng 2, 3,... -->

        <Button
            android:id="@+id/btnSetTimers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt giờ bật/tắt thiết bị" />

        <!-- Thêm Button để gửi dữ liệu đến Arduino -->
        <Button
            android:id="@+id/btnSendData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi lệnh đến Arduino" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>